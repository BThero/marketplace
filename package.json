{
  "name": "marketplace",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "tsx watch --env-file=.env.local src/index.tsx",
    "build": "tsc && tsc-alias",
    "start": "node --env-file-if-exists=.env.local dist/src/index.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "types": "tsc --noEmit",
    "check": "pnpm format:check && pnpm types",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "images:generate": "tsx --env-file=.env.local src/scripts/process-images.ts",
    "images:insert": "tsx --env-file=.env.local src/scripts/populate-db.ts"
  },
  "dependencies": {
    "@hono/node-server": "1.19.3",
    "drizzle-orm": "0.44.5",
    "hono": "4.9.8",
    "pg": "8.16.3"
  },
  "devDependencies": {
    "@types/node": "22.18.6",
    "@types/pg": "8.15.5",
    "drizzle-kit": "0.31.4",
    "prettier": "3.6.2",
    "sharp": "0.34.4",
    "tsc-alias": "^1.8.16",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  }
}
